<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          prefHeight="150.0" prefWidth="300.0">
    <fx:define>
        <ToggleGroup fx:id="colourBlindModes" />
    </fx:define>
    <RadioButton fx:id="normalMode" layoutX="100.0" layoutY="15.0" GridPane.rowIndex="1" GridPane.columnIndex="1" text="Normal Mode" toggleGroup="$colourBlindModes"/>
    <RadioButton fx:id="protanopia" layoutX="100.0" layoutY="35.0" GridPane.rowIndex="2" GridPane.columnIndex="1" text="Protanopia" toggleGroup="$colourBlindModes"/>
    <RadioButton fx:id="deuteranopia" layoutX="100.0" layoutY="55.0" GridPane.rowIndex="3" GridPane.columnIndex="1" text="Deuteranopia" toggleGroup="$colourBlindModes"/>
    <RadioButton fx:id="tritanopia" layoutX="100.0" layoutY="75.0" GridPane.rowIndex="4" GridPane.columnIndex="1" text="Tritanopia" toggleGroup="$colourBlindModes"/>
    <Button fx:id="confirmColourModeButton" onAction="#changeColourMode" layoutX="117.5" layoutY="100.0" GridPane.rowIndex="5" GridPane.columnIndex="1" text="Confirm">
        <font>
            <Font name="System Bold" size="13.0" />
        </font>
    </Button>
</AnchorPane>
